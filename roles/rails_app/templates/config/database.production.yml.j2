# DATABASE.YML (PROD)
# CONFIG AUTOGENERATED BY ANSIBLE
# THIS IS NOT CHECKED INTO SOURCE CONTROL

production:
  adapter: {{ rails_app_db_adapter }}
  encoding: utf8
  database: {{ rails_app_db_name | default(rails_app_name + '_production') }}
  reconnect: true
  host: {{ rails_app_db_host }}
  pool: {{ rails_app_db_pool }}
  username: {{ rails_app_db_username }}
{% if rails_app_db_password is defined %}
  password: {{ rails_app_db_password }}
{% endif %}
{% if rails_app_db_connection == 'socket' %}
  socket: {{ rails_app_db_socket_path }}
{% elif rails_app_db_connection == 'port' %}
  port: {{ rails_app_db_port }}
{% endif %}
